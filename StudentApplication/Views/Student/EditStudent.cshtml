@{
}

@model StudentApplication.Models.Student

<h1>Edit Student</h1>


@if (Model is null)
{
    <p>No Student is Found with this Id</p>
}

else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="type" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="type" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">EmailId</label>
            <input type="type" class="form-control" asp-for="EmailId" />
        </div>

        <div class="mt-3">
            <label class="form-label">Remarks</label>
            <input type="type" class="form-control" asp-for="Remarks" />
        </div>

        <div class="mt-3">
            <input type="checkbox" class="form-check-label" id="subscribed" asp-for="Subscribed" />
            <label class="form-check-label" for="Subscribed"> Subscribed </label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3" asp-controller="Student" asp-action="Delete">Delete</button>
        </div>
    </form>
}


